<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Vista7Activity2"
    android:background="@drawable/fondoprincipal">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/iconotoolbar" />

        <ImageButton
            android:id="@+id/iconomjs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green1"
            android:src="@drawable/iconomensaje"
            android:layout_gravity="end"  />

        <ImageButton
            android:id="@+id/icononotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green1"
            android:layout_gravity="end"
            android:src="@drawable/icononotificacion"/>

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/titulo8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Titulo8"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/medioambiente"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/medioambiente"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/titulo8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/cuidemosmedioambiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicar las imÃ¡genes en su respectivo campo"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo8"/>

     <Button
        android:id="@+id/finish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="siguiente"
        android:drawableRight="@drawable/iconosigu"
        android:backgroundTint="@color/green1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/medioambiente" />

    <Button
        android:id="@+id/retroceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Btnant"
        android:drawableLeft="@drawable/iconoant"
     android:backgroundTint="@color/green1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cuidemosmedioambiente"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
